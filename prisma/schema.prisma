generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortUrl {
  id            String      @id
  full          String
  shorten       String
  private       Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model UsageStatistic {
  id            Int         @id @default(autoincrement())
  shortUrlId    String
  period        String      
  value         Int
  counter       Int
  year          Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model CheckDate {
  id            Int         @id @default(autoincrement())
  date          String
}